	.ad-title {
		font-size: 14px;
		font-weight: 600;
		color: #888;
		margin: 0 0 4px 0;
	}

	.ad-subtitle {
		font-size: 11px;
		color: #666;
		margin: 0;
	}

	/* Responsive Design */
	@media (max-width: 640px) {
		.app-view-container {
			padding: 12px;
		}

		.mobile-frame,
		.ad-space {
			max-width: 100%;
		}

		.mobile-frame {
			--rail-size: 30px;
			--rail-offset: 10px;
			--bottom-bar-height: 52px;
		}

		.chrome-title {
			max-width: 140px;
		}

		.iframe-container {
			height: calc(100vh - 100px - 90px - 24px - var(--bottom-bar-height));
			min-height: 300px;
		}

		.bottom-bar {
			padding: 0 10px;
			gap: 8px;
