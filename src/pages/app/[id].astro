---
import Layout from '../../layouts/Layout.astro';
import { getDB } from '../../lib/db';
import { apps } from '../../schema';
import { eq } from 'drizzle-orm';

const { id } = Astro.params;

const db = getDB(Astro.locals.runtime.env);
const result = await db.select().from(apps).where(eq(apps.id, id as string));

const app = result[0];

if (!app) {
	return Astro.redirect('/404');
}

// Format dates for display
const formatDate = (date: Date) => {
	return new Intl.DateTimeFormat('en-US', {
		year: 'numeric',
		month: 'long',
		day: 'numeric',
		hour: '2-digit',
		minute: '2-digit'
	}).format(date);
};

const createdDate = formatDate(new Date(app.createdAt));
const updatedDate = formatDate(new Date(app.updatedAt));
const authorName = app.authorName || 'Anonymous';

// Generate random ad placeholder content
const adPlaceholders = [
	{ title: 'Build Apps with Pico', subtitle: 'Create, share, and fork mini apps' },
	{ title: 'Fast Cloudflare Hosting', subtitle: 'Lightning-fast edge deployment' },
	{ title: 'Join the Community', subtitle: 'Share your creations with the world' },
	{ title: 'Astro + React + Tailwind', subtitle: 'Modern web development stack' }
];
const randomAd = adPlaceholders[Math.floor(Math.random() * adPlaceholders.length)];
---

<Layout title={app.title}>
	<div class="app-view-container">
		<!-- Metadata Dialog -->
		<dialog id="metadata-dialog" class="metadata-dialog">
			<div class="dialog-content">
				<div class="dialog-header">
					<h3>App Metadata</h3>
					<button id="close-dialog" class="close-btn">&times;</button>
				</div>
				<div class="dialog-body">
					<div class="metadata-item">
						<span class="metadata-label">Author</span>
						<span class="metadata-value">{authorName}</span>
					</div>
					<div class="metadata-item">
						<span class="metadata-label">Created</span>
						<span class="metadata-value">{createdDate}</span>
					</div>
					<div class="metadata-item">
						<span class="metadata-label">Updated</span>
						<span class="metadata-value">{updatedDate}</span>
					</div>
				</div>
			</div>
		</dialog>

		<!-- Mobile Frame -->
		<div class="mobile-frame">
			<!-- Window Chrome -->
			<div class="window-chrome">
				<div class="chrome-left">
					<a href="/create" class="chrome-icon create-icon" title="Create new app">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
							<line x1="12" y1="8" x2="12" y2="16"></line>
							<line x1="8" y1="12" x2="16" y2="12"></line>
						</svg>
					</a>
					<a href="/" class="chrome-icon home-icon" title="Home">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
							<polyline points="9 22 9 12 15 12 15 22"></polyline>
						</svg>
					</a>
					<span class="chrome-logo">Pico</span>
					<span class="chrome-title" title={app.title}>{app.title}</span>
				</div>
				<div class="chrome-right">
					<button id="metadata-btn" class="chrome-icon metadata-icon" title="View metadata">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<line x1="12" y1="16" x2="12" y2="12"></line>
							<line x1="12" y1="8" x2="12.01" y2="8"></line>
						</svg>
					</button>
					<button id="share-btn" class="chrome-icon share-icon" title="Share this app">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="18" cy="5" r="3"></circle>
							<circle cx="6" cy="12" r="3"></circle>
							<circle cx="18" cy="19" r="3"></circle>
							<line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
							<line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
						</svg>
					</button>
					<button id="fork-btn" class="chrome-icon fork-icon" title="Fork this app (coming soon)">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<line x1="6" y1="3" x2="6" y2="15"></line>
							<circle cx="18" cy="6" r="3"></circle>
							<circle cx="6" cy="18" r="3"></circle>
							<path d="M18 9a9 9 0 0 1-9 9"></path>
						</svg>
					</button>
				</div>
			</div>

			<!-- App iframe -->
			<div class="iframe-container">
				<iframe
					id="app-frame"
					title={app.title}
					class="app-iframe"
					sandbox="allow-scripts allow-same-origin"
				></iframe>
			</div>
		</div>

		<!-- Ad Space -->
		<div class="ad-space">
			<div class="ad-content">
				<div class="ad-placeholder">
					<span class="ad-badge">Advertisement</span>
					<h4 class="ad-title">{randomAd.title}</h4>
					<p class="ad-subtitle">{randomAd.subtitle}</p>
				</div>
			</div>
		</div>
	</div>

	<script define:vars={{ app, shareUrl: `/app/${app.id}` }}>
		// Metadata dialog
		const dialog = document.getElementById('metadata-dialog');
		const metadataBtn = document.getElementById('metadata-btn');
		const closeDialogBtn = document.getElementById('close-dialog');

		metadataBtn?.addEventListener('click', () => {
			dialog?.showModal();
		});

		closeDialogBtn?.addEventListener('click', () => {
			dialog?.close();
		});

		dialog?.addEventListener('click', (e) => {
			if (e.target === dialog) {
				dialog.close();
			}
		});

		// Share button
		const shareBtn = document.getElementById('share-btn');
		shareBtn?.addEventListener('click', async () => {
			const fullUrl = window.location.origin + shareUrl;
			await navigator.clipboard.writeText(fullUrl);

			// Brief visual feedback
			const originalColor = shareBtn.style.color;
			shareBtn.style.color = '#10b981';
			setTimeout(() => {
				shareBtn.style.color = originalColor;
			}, 500);
		});

		// Fork button (placeholder)
		const forkBtn = document.getElementById('fork-btn');
		forkBtn?.addEventListener('click', () => {
			alert('Forking functionality coming soon!');
		});

		// App loading with delay
		const iframe = document.getElementById('app-frame') as HTMLIFrameElement;

		const getLoadingHtml = () => {
			return `<!DOCTYPE html>
			<html>
				<head>
					<style>
						* { margin: 0; padding: 0; box-sizing: border-box; }
						body {
							display: flex;
							align-items: center;
							justify-content: center;
							height: 100vh;
							background: #1a1a1a;
							font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
						}
						.loading-container { text-align: center; }
						.spinner {
							width: 40px;
							height: 40px;
							margin: 0 auto 16px;
							border: 3px solid #333;
							border-top-color: #8b5cf6;
							border-radius: 50%;
							animation: spin 0.8s linear infinite;
						}
						.loading-text { color: #888; font-size: 14px; }
						@keyframes spin { to { transform: rotate(360deg); } }
					</style>
				</head>
				<body>
					<div class="loading-container">
						<div class="spinner"></div>
						<div class="loading-text">Loading app...</div>
					</div>
				</body>
			</html>`;
		};

		const getAppHtml = (appData: typeof app) => {
			const cssContent = appData.css ? `<style>${appData.css}</style>` : '';
			const closeScript = '</' + 'script>';
			const openScript = '<' + 'script>';
			const jsContent = appData.js ? `${openScript}${appData.js}${closeScript}` : '';
			return `<!DOCTYPE html>
			<html>
				<head>
					<meta name="viewport" content="width=device-width, initial-scale=1.0">
					${cssContent}
				</head>
				<body>
					${appData.html}
					${jsContent}
				</body>
			</html>`;
		};

		// Show loading state
		if (iframe) {
			const doc = iframe.contentDocument || iframe.contentWindow?.document;
			if (doc) {
				doc.open();
				doc.write(getLoadingHtml());
				doc.close();
			}

			// Load actual app after 500ms
			setTimeout(() => {
				const appDoc = iframe.contentDocument || iframe.contentWindow?.document;
				if (appDoc) {
					appDoc.open();
					appDoc.write(getAppHtml(app));
					appDoc.close();
				}
			}, 500);
		}
	</script>
</Layout>

<style>
	/* Dark paper texture background */
	.app-view-container {
		min-height: 100vh;
		background:
			radial-gradient(ellipse at 20% 30%, rgba(45, 45, 45, 0.4) 0%, transparent 50%),
			radial-gradient(ellipse at 80% 70%, rgba(30, 30, 30, 0.3) 0%, transparent 50%),
			#1a1a1a;
		background-size: 100% 100%, 100% 100%, 100% 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 20px;
		position: relative;
	}

	/* Subtle paper texture */
	.app-view-container::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
		opacity: 0.03;
		pointer-events: none;
		z-index: 0;
	}

	/* Mobile Frame */
	.mobile-frame {
		position: relative;
		z-index: 1;
		width: 100%;
		max-width: 375px;
		background: #000;
		border-radius: 12px;
		overflow: hidden;
		box-shadow:
			0 25px 50px -12px rgba(0, 0, 0, 0.5),
			0 0 0 1px rgba(255, 255, 255, 0.1);
	}

	/* Window Chrome */
	.window-chrome {
		display: flex;
		justify-content: space-between;
		align-items: center;
		background: #1d1d1f;
		padding: 10px 14px;
		gap: 8px;
	}

	.chrome-left,
	.chrome-right {
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.chrome-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 28px;
		height: 28px;
		border-radius: 6px;
		background: transparent;
		border: none;
		cursor: pointer;
		transition: all 0.15s ease;
		color: #888;
	}

	.chrome-icon:hover {
		background: rgba(255, 255, 255, 0.1);
	}

	.chrome-icon:active {
		transform: scale(0.95);
	}

	/* Icon colors */
	.create-icon {
		color: #10b981;
	}

	.home-icon {
		color: #3b82f6;
	}

	.metadata-icon {
		color: #f59e0b;
	}

	.share-icon {
		color: #06b6d4;
	}

	.fork-icon {
		color: #ec4899;
	}

	.chrome-icon a {
		color: inherit;
		text-decoration: none;
	}

	.chrome-logo {
		font-size: 11px;
		font-weight: 600;
		color: #666;
		letter-spacing: 0.5px;
	}

	.chrome-title {
		font-size: 13px;
		font-weight: 500;
		color: #e5e5e5;
		max-width: 120px;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	/* Iframe Container */
	.iframe-container {
		height: calc(100vh - 120px - 90px - 40px);
		min-height: 400px;
		background: #000;
	}

	.app-iframe {
		width: 100%;
		height: 100%;
		border: none;
	}

	/* Metadata Dialog */
	.metadata-dialog {
		border: none;
		border-radius: 12px;
		padding: 0;
		background: transparent;
		max-width: 350px;
		width: 90%;
	}

	.metadata-dialog::backdrop {
		background: rgba(0, 0, 0, 0.6);
		backdrop-filter: blur(4px);
	}

	.dialog-content {
		background: #1d1d1f;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.dialog-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 16px 20px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.dialog-header h3 {
		margin: 0;
		font-size: 16px;
		font-weight: 600;
		color: #e5e5e5;
	}

	.close-btn {
		background: transparent;
		border: none;
		color: #888;
		font-size: 24px;
		cursor: pointer;
		padding: 0;
		width: 28px;
		height: 28px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 6px;
		transition: all 0.15s ease;
	}

	.close-btn:hover {
		background: rgba(255, 255, 255, 0.1);
		color: #e5e5e5;
	}

	.dialog-body {
		padding: 16px 20px;
	}

	.metadata-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 10px 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	.metadata-item:last-child {
		border-bottom: none;
	}

	.metadata-label {
		font-size: 13px;
		color: #888;
	}

	.metadata-value {
		font-size: 13px;
		color: #e5e5e5;
		font-weight: 500;
	}

	/* Ad Space */
	.ad-space {
		position: relative;
		z-index: 1;
		width: 100%;
		max-width: 375px;
		height: 90px;
		margin-top: 12px;
		border-radius: 8px;
		overflow: hidden;
		background: #2d2d2d;
		border: 1px solid rgba(255, 255, 255, 0.05);
	}

	.ad-content {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 16px;
	}

	.ad-placeholder {
		text-align: center;
	}

	.ad-badge {
		display: inline-block;
		font-size: 9px;
		text-transform: uppercase;
		letter-spacing: 1px;
		color: #666;
		background: rgba(255, 255, 255, 0.05);
		padding: 2px 8px;
		border-radius: 4px;
		margin-bottom: 8px;
	}

	.ad-title {
		font-size: 14px;
		font-weight: 600;
		color: #888;
		margin: 0 0 4px 0;
	}

	.ad-subtitle {
		font-size: 11px;
		color: #666;
		margin: 0;
	}

	/* Responsive Design */
	@media (max-width: 640px) {
		.app-view-container {
			padding: 12px;
		}

		.mobile-frame,
		.ad-space {
			max-width: 100%;
		}

		.chrome-title {
			max-width: 80px;
		}

		.iframe-container {
			height: calc(100vh - 100px - 90px - 24px);
			min-height: 300px;
		}

		.chrome-icon {
			width: 26px;
			height: 26px;
		}

		.chrome-icon svg {
			width: 13px;
			height: 13px;
		}

		.chrome-logo {
			font-size: 10px;
		}

		.chrome-title {
			font-size: 12px;
		}
	}

	@media (max-width: 400px) {
		.chrome-logo {
			display: none;
		}
	}
</style>
