			0 25px 50px -12px rgba(0, 0, 0, 0.5),
			0 0 0 1px rgba(255, 255, 255, 0.1);
	}

	/* Window Chrome */
	.window-chrome {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		background: #1d1d1f;
		padding: 10px 14px;
		gap: 10px;
	}

	.chrome-left {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.frame-shell {
		position: relative;
	}

	.frame-rail {
		position: absolute;
		right: var(--rail-offset);
		display: flex;
		flex-direction: column;
		gap: 8px;
		z-index: 2;
	}

	.frame-rail-top {
		top: var(--rail-offset);
	}

	.frame-rail-bottom {
		bottom: calc(var(--bottom-bar-height) + var(--rail-offset));
	}

	.rail-icon-button {
		display: flex;
		align-items: center;
		justify-content: center;
		width: var(--rail-size);
		height: var(--rail-size);
		border-radius: 10px;
		background: rgba(18, 18, 20, 0.92);
		border: 1px solid rgba(255, 255, 255, 0.12);
		color: #e5e5e5;
		cursor: pointer;
		transition: all 0.15s ease;
		text-decoration: none;
	}

	.rail-icon-button:hover {
		background: rgba(255, 255, 255, 0.08);
		border-color: rgba(255, 255, 255, 0.2);
	}

	.rail-icon-button:active {
		transform: scale(0.96);
	}

	.rail-icon-button:focus-visible {
		outline: 2px solid rgba(59, 130, 246, 0.7);
		outline-offset: 2px;
	}

	.bottom-bar {
		display: flex;
		align-items: center;
		gap: 10px;
		height: var(--bottom-bar-height);
		padding: 0 12px;
		box-sizing: border-box;
		background: #161618;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
	}

	.bottom-button {
		flex: 1 1 0;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 6px;
		height: 36px;
		border-radius: 10px;
		background: rgba(255, 255, 255, 0.04);
		border: 1px solid transparent;
		cursor: pointer;
		color: #e5e5e5;
		font-size: 12px;
		font-family: inherit;
		letter-spacing: 0.2px;
		transition: all 0.15s ease;
	}

	.bottom-button:hover {
		background: rgba(255, 255, 255, 0.08);
		border-color: rgba(255, 255, 255, 0.12);
	}

	.bottom-button:active {
		transform: scale(0.98);
	}

	.bottom-button:focus-visible {
		outline: 2px solid rgba(59, 130, 246, 0.7);
		outline-offset: 2px;
	}

	.bottom-button.is-active {
		background: rgba(244, 114, 182, 0.15);
		border-color: rgba(244, 114, 182, 0.4);
	}

	.bottom-button.is-flashed {
		background: rgba(16, 185, 129, 0.18);
		border-color: rgba(16, 185, 129, 0.4);
	}

	.bottom-button.is-flashed .bottom-icon {
		color: #10b981;
	}

	.bottom-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 16px;
		height: 16px;
	}

	.bottom-count {
		color: #d4d4d8;
		font-size: 12px;
		font-weight: 600;
	}

	/* Icon colors */
	.create-icon {
		color: #10b981;
	}

	.home-icon {
		color: #3b82f6;
	}

	.metadata-icon {
		color: #f59e0b;
	}

	.share-icon {
		color: #06b6d4;
	}

	.fork-icon {
		color: #ec4899;
	}

	.like-icon {
		color: #f472b6;
	}

	.comment-icon {
		color: #38bdf8;
	}

	.chrome-logo {
		font-size: 11px;
		font-weight: 600;
		color: #666;
		letter-spacing: 0.5px;
	}

	.chrome-title {
		font-size: 13px;
		font-weight: 500;
		color: #e5e5e5;
		max-width: 180px;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	/* Iframe Container */
	.iframe-container {
		height: calc(100vh - 120px - 90px - 40px - var(--bottom-bar-height));
		min-height: 400px;
		background: #2b2b2b;
		padding-right: calc(var(--rail-size) + (var(--rail-offset) * 2));
		box-sizing: border-box;
	}

	.app-iframe {
		width: 100%;
		height: 100%;
		border: none;
		background: #2b2b2b;
	}

	/* Metadata Dialog */
	.metadata-dialog {
		border: none;
		border-radius: 12px;
		padding: 0;
		background: transparent;
		max-width: 350px;
		width: 90%;
	}

	.metadata-dialog::backdrop {
		background: rgba(0, 0, 0, 0.6);
		backdrop-filter: blur(4px);
	}

	.dialog-content {
		background: #1d1d1f;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.dialog-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 16px 20px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.dialog-header h3 {
		margin: 0;
		font-size: 16px;
		font-weight: 600;
		color: #e5e5e5;
	}

	.close-btn {
		background: transparent;
		border: none;
		color: #888;
		font-size: 24px;
		cursor: pointer;
		padding: 0;
		width: 28px;
		height: 28px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 6px;
		transition: all 0.15s ease;
	}

	.close-btn:hover {
