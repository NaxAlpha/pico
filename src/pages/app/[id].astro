---
import Layout from '../../layouts/Layout.astro';
import { getDB } from '../../lib/db';
import { apps } from '../../schema';
import { eq } from 'drizzle-orm';

const { id } = Astro.params;

const db = getDB(Astro.locals.runtime.env);
const result = await db.select().from(apps).where(eq(apps.id, id as string));

const app = result[0];

if (!app) {
	return Astro.redirect('/404');
}

// Format dates for display
const formatDate = (date: Date) => {
	return new Intl.DateTimeFormat('en-US', {
		year: 'numeric',
		month: 'long',
		day: 'numeric',
		hour: '2-digit',
		minute: '2-digit'
	}).format(date);
};

const createdDate = formatDate(new Date(app.createdAt));
const updatedDate = formatDate(new Date(app.updatedAt));
const authorName = app.authorName || 'Anonymous';

// Generate random ad placeholder content
const adPlaceholders = [
	{ title: 'Build Apps with Pico', subtitle: 'Create, share, and fork mini apps' },
	{ title: 'Fast Cloudflare Hosting', subtitle: 'Lightning-fast edge deployment' },
	{ title: 'Join the Community', subtitle: 'Share your creations with the world' },
	{ title: 'Astro + React + Tailwind', subtitle: 'Modern web development stack' }
];
const randomAd = adPlaceholders[Math.floor(Math.random() * adPlaceholders.length)];
---

<Layout title={app.title}>
	<div class="app-view-container">
		<!-- Metadata Dialog -->
		<dialog id="metadata-dialog" class="metadata-dialog">
			<div class="dialog-content">
				<div class="dialog-header">
					<h3>App Metadata</h3>
					<button id="close-dialog" class="close-btn">&times;</button>
				</div>
				<div class="dialog-body">
					<div class="metadata-item">
						<span class="metadata-label">Author</span>
						<span class="metadata-value">{authorName}</span>
					</div>
					<div class="metadata-item">
						<span class="metadata-label">Created</span>
						<span class="metadata-value">{createdDate}</span>
					</div>
					<div class="metadata-item">
						<span class="metadata-label">Updated</span>
						<span class="metadata-value">{updatedDate}</span>
					</div>
				</div>
			</div>
		</dialog>

		<!-- Mobile Frame -->
		<div class="mobile-frame">
			<!-- Window Chrome -->
			<div class="window-chrome">
				<div class="chrome-left">
					<span class="chrome-logo">Pico</span>
					<span class="chrome-title" title={app.title}>{app.title}</span>
				</div>
			</div>

			<div class="frame-shell">
				<!-- App iframe -->
				<div class="iframe-container">
					<iframe
						id="app-frame"
						title={app.title}
						class="app-iframe"
						sandbox="allow-scripts allow-same-origin"
					></iframe>
				</div>

				<div class="frame-rail frame-rail-top" aria-label="Primary actions">
					<a href="/create" class="rail-icon-button create-icon" title="Create new app" aria-label="Create new app">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
							<line x1="12" y1="8" x2="12" y2="16"></line>
							<line x1="8" y1="12" x2="16" y2="12"></line>
						</svg>
					</a>
					<a href="/" class="rail-icon-button home-icon" title="Home" aria-label="Home">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
							<polyline points="9 22 9 12 15 12 15 22"></polyline>
						</svg>
					</a>
				</div>

				<div class="frame-rail frame-rail-bottom" aria-label="Utility actions">
					<button id="fork-btn" class="rail-icon-button fork-icon" title="Fork this app (coming soon)" type="button" aria-label="Fork this app">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<line x1="6" y1="3" x2="6" y2="15"></line>
							<circle cx="18" cy="6" r="3"></circle>
							<circle cx="6" cy="18" r="3"></circle>
							<path d="M18 9a9 9 0 0 1-9 9"></path>
						</svg>
					</button>
					<button id="metadata-btn" class="rail-icon-button metadata-icon" title="View metadata" type="button" aria-label="View metadata">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<line x1="12" y1="16" x2="12" y2="12"></line>
							<line x1="12" y1="8" x2="12.01" y2="8"></line>
						</svg>
					</button>
				</div>

				<div class="bottom-bar" aria-label="Engagement actions">
					<button id="like-btn" class="bottom-button" title="Like this app" type="button" aria-pressed="false" aria-label="Like this app">
						<span class="bottom-icon like-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
							</svg>
						</span>
						<span id="like-count" class="bottom-count">0</span>
					</button>
					<button id="comment-btn" class="bottom-button" title="View comments" type="button" aria-label="View comments">
						<span class="bottom-icon comment-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M21 15a4 4 0 0 1-4 4H7l-4 4V7a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4z"></path>
							</svg>
						</span>
						<span id="comment-count" class="bottom-count">0</span>
					</button>
					<button id="share-btn" class="bottom-button" title="Share this app" type="button" aria-label="Share this app">
						<span class="bottom-icon share-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<circle cx="18" cy="5" r="3"></circle>
								<circle cx="6" cy="12" r="3"></circle>
								<circle cx="18" cy="19" r="3"></circle>
								<line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
								<line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
							</svg>
						</span>
						<span id="share-count" class="bottom-count">0</span>
					</button>
				</div>
			</div>
		</div>

		<!-- Ad Space -->
		<div class="ad-space">
			<div class="ad-content">
				<div class="ad-placeholder">
					<span class="ad-badge">Advertisement</span>
					<h4 class="ad-title">{randomAd.title}</h4>
					<p class="ad-subtitle">{randomAd.subtitle}</p>
				</div>
			</div>
		</div>
	</div>

	<script define:vars={{ app, shareUrl: `/app/${app.id}` }}>
		// Metadata dialog
		const dialog = document.getElementById('metadata-dialog');
		const metadataBtn = document.getElementById('metadata-btn');
		const closeDialogBtn = document.getElementById('close-dialog');

		metadataBtn?.addEventListener('click', () => {
			dialog?.showModal();
		});

		closeDialogBtn?.addEventListener('click', () => {
			dialog?.close();
		});

		dialog?.addEventListener('click', (e) => {
			if (e.target === dialog) {
				dialog.close();
			}
		});

		const parseCount = (element: HTMLElement | null) => {
			const value = Number(element?.textContent ?? 0);
			return Number.isFinite(value) ? value : 0;
		};

		// Like button
		const likeBtn = document.getElementById('like-btn') as HTMLButtonElement | null;
		const likeCountEl = document.getElementById('like-count');
		let likeCount = parseCount(likeCountEl);
		if (likeBtn && likeCountEl) {
			let liked = false;
			likeBtn.addEventListener('click', () => {
				liked = !liked;
				likeBtn.setAttribute('aria-pressed', liked.toString());
				likeBtn.classList.toggle('is-active', liked);
				likeCount = Math.max(0, likeCount + (liked ? 1 : -1));
				likeCountEl.textContent = likeCount.toString();
			});
		}

		// Comment button (placeholder)
		const commentBtn = document.getElementById('comment-btn');
		if (commentBtn) {
			commentBtn.addEventListener('click', () => {
				alert('Comments are coming soon!');
			});
		}

		// Share button
		const shareBtn = document.getElementById('share-btn') as HTMLButtonElement | null;
		const shareCountEl = document.getElementById('share-count');
		let shareCount = parseCount(shareCountEl);
		if (shareBtn) {
			shareBtn.addEventListener('click', async () => {
				const fullUrl = window.location.origin + shareUrl;
				try {
					await navigator.clipboard.writeText(fullUrl);
				} catch {
					// Ignore clipboard errors; still provide visual feedback.
				}

				if (shareCountEl) {
					shareCount += 1;
					shareCountEl.textContent = shareCount.toString();
				}

				// Brief visual feedback
				shareBtn.classList.add('is-flashed');
				setTimeout(() => {
					shareBtn.classList.remove('is-flashed');
				}, 500);
			});
		}

		// Fork button (placeholder)
		const forkBtn = document.getElementById('fork-btn');
		forkBtn?.addEventListener('click', () => {
			alert('Forking functionality coming soon!');
		});

		// App loading with delay
		const iframe = document.getElementById('app-frame') as HTMLIFrameElement;

		const getLoadingHtml = () => {
			return `<!DOCTYPE html>
			<html>
				<head>
					<style>
						* { margin: 0; padding: 0; box-sizing: border-box; }
						body {
							display: flex;
							align-items: center;
							justify-content: center;
							height: 100vh;
							background: #1a1a1a;
							font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
						}
						.loading-container { text-align: center; }
						.spinner {
							width: 40px;
							height: 40px;
							margin: 0 auto 16px;
							border: 3px solid #333;
							border-top-color: #8b5cf6;
							border-radius: 50%;
							animation: spin 0.8s linear infinite;
						}
						.loading-text { color: #888; font-size: 14px; }
						@keyframes spin { to { transform: rotate(360deg); } }
					</style>
				</head>
				<body>
					<div class="loading-container">
						<div class="spinner"></div>
						<div class="loading-text">Loading app...</div>
					</div>
				</body>
			</html>`;
		};

		const getAppHtml = (appData: typeof app) => {
			const cssContent = appData.css ? `<style>${appData.css}</style>` : '';
			const closeScript = '</' + 'script>';
			const openScript = '<' + 'script>';
			const jsContent = appData.js ? `${openScript}${appData.js}${closeScript}` : '';
			return `<!DOCTYPE html>
			<html>
				<head>
					<meta name="viewport" content="width=device-width, initial-scale=1.0">
					${cssContent}
				</head>
				<body>
					${appData.html}
					${jsContent}
				</body>
			</html>`;
		};

		// Show loading state
		if (iframe) {
			const doc = iframe.contentDocument || iframe.contentWindow?.document;
			if (doc) {
				doc.open();
				doc.write(getLoadingHtml());
				doc.close();
			}

			// Load actual app after 500ms
			setTimeout(() => {
				const appDoc = iframe.contentDocument || iframe.contentWindow?.document;
				if (appDoc) {
					appDoc.open();
					appDoc.write(getAppHtml(app));
					appDoc.close();
				}
			}, 500);
		}
	</script>
</Layout>

<style>
	/* Dark paper texture background */
	.app-view-container {
		min-height: 100vh;
		background:
			radial-gradient(ellipse at 20% 30%, rgba(45, 45, 45, 0.4) 0%, transparent 50%),
			radial-gradient(ellipse at 80% 70%, rgba(30, 30, 30, 0.3) 0%, transparent 50%),
			#1a1a1a;
		background-size: 100% 100%, 100% 100%, 100% 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 20px;
		position: relative;
	}

	/* Subtle paper texture */
	.app-view-container::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
		opacity: 0.03;
		pointer-events: none;
		z-index: 0;
	}

	/* Mobile Frame */
	.mobile-frame {
		position: relative;
		z-index: 1;
		width: 100%;
		max-width: 375px;
		background: #000;
		--rail-size: 34px;
		--rail-offset: 12px;
		--bottom-bar-height: 56px;
		border-radius: 12px;
		overflow: hidden;
